          return -1;
    }
    if(strlen(spi_dev)==0){
        spi_dev=(ret==2)? "/dev/spidev1.2":"/dev/spidev1.0";
    }
    fd=open(spi_dev, O_RDWR);
    if(fd<0){
        rtapi_print_msg(RTAPI_MSG_ERR,
            "HAL_rpi_spi_cpld: ERROR: cannot open spi %s\n",
			spi_dev);
        return -1;
  }
