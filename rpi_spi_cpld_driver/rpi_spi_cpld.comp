        return -1;
    }
    rtapi_print_msg(RTAPI_MSG_ERR,
            "HAL_rpi_spi_cpld: CLK=%dHz PLUTO_FREQ=%dHz PLUTO_SPEED=%.2fuS: setup ok\n",
						PLUTO_CLK, PLUTO_FREQ, PLUTO_SPEED*1000000.0);
        return 0;
}

